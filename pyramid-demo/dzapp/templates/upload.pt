<!DOCTYPE html>
<html>
<head>
    <title>Dropzone.js Example</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/dropzone@5.9.2/dist/min/dropzone.min.css">
</head>
<body>
    <h1>File Upload using Dropzone.js</h1>
    <form id="my-dropzone" class="dropzone">
        <div class="fallback">
            <input name="file" type="file" multiple />
        </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/dropzone@5.9.2/dist/min/dropzone.min.js"></script>
    <script>
        Dropzone.options.myDropzone = {
            paramName: "file", // The name that will be used to transfer the file
            maxFilesize: 5, // MB
            acceptedFiles: ".jpg, .jpeg, .png", // Allowed file types
            init: function () {
                this.on("success", function (file, response) {
                    console.log("File uploaded successfully.", response);
                });
            }
        };
    </script>
</body>
</html>

